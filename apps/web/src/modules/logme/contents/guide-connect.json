  "en": [
    {
      "id": "github-1",
      "title": "Connect Logme APP",
      "steps": [
        {
          "text": "1. Click the 'Connect Logme App' button in account management.",
          "image": "/guide-connect/1-gitapp-logme-app-1.png"
        },
        {
          "text": "2. Click 'Install & Authorize' and then close the window.",
          "image": "/guide-connect/1-gitapp-logme-app-2.png"
        }
      ]
    },
    {
      "id": "github-2",
      "title": "Connect Vercel APP",
      "steps": [
        {
          "text": "1. Click the 'Connect Vercel App' button in account management.",
          "image": "/guide-connect/2-gitapp-vercel-app-1.png"
        },
        {
          "text": "2. Click 'Install & Authorize'.",
          "image": "/guide-connect/2-gitapp-vercel-app-2.png"
        },
        {
          "text": "3. Verify the installation, then close the window.",
          "image": "/guide-connect/2-gitapp-vercel-app-3.png"
        }
      ]
    },
    {
      "id": "vercel",
      "title": "▲ Create Vercel Token",
      "steps": [
        {
          "text": "1. Click the 'Create Vercel Token' button to generate a token.",
          "image": "/guide-connect/3-vercel-1.png"
        },
        {
          "text": "2. Copy the generated Vercel token.",
          "image": "/guide-connect/3-vercel-2.png"
        },
        {
          "text": "3. Paste the token into the Vercel token field on the account management page.",
          "image": "/guide-connect/3-vercel-3.png"
        }
      ],
      "link": {
        "text": ">> Create Vercel Token",
        "url": "https://vercel.com/account/settings/tokens"
      }
    }
  ]
