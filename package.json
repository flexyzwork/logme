{
  "name": "saas",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "check-types": "turbo run check-types",
    "db": "yarn --filter @repo/db",
    "db:m": "yarn db migrate dev --name",
    "dev": "turbo run dev",
    "docker-dev": "yarn --filter @repo/docker-dev",
    "format": "prettier --write .",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:w": "turbo run test:watch"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.0",
    "typescript": "^5.8.3"
  },
  "packageManager": "yarn@1.22.19",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  }
}