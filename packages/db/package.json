{
  "name": "@repo/db",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "pnpm build:prisma && tsup --clean",
    "check-types": "tsc --noEmit",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "build:prisma": "prisma generate",
    "migrate": "prisma migrate",
    "push": "prisma db push",
    "seed:build": "tsup ./src/seed.ts",
    "seed": "pnpm seed:build && node ./dist/seed.js" 
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:^",
    "@repo/typescript-config": "workspace:^",
    "@types/node": "^22.14.0",
    "prisma": "^6.5.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "nanoid": "^5.1.5"
  }
}
